<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Home"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/home_interface_txt"
        android:layout_width="269dp"
        android:layout_height="128dp"
        android:background="@drawable/rounded"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="Notifications"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vert_80"
        app:layout_constraintStart_toStartOf="@+id/guideline_vert_20"
        app:layout_constraintTop_toTopOf="@+id/guideline_horiz_15"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/home_emergency_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/home_emergency_txt"
        app:backgroundTint="#B80F0A"

        app:layout_constraintBottom_toTopOf="@+id/guideline_horiz_75"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vert_80"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_vert_20" />

    <Button
        android:id="@+id/home_help_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/home_help_txt"
        app:backgroundTint="#2F80EC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vert_80"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_vert_20"
        app:layout_constraintTop_toTopOf="@+id/guideline_horiz_20" />

    <Button
        android:id="@+id/home_medication_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/home_medication_txt"
        app:backgroundTint="#2F80EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vert_80"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_vert_20"
        app:layout_constraintTop_toBottomOf="@+id/home_help_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/home_contact_family_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/home_contact_family_txt"
        app:backgroundTint="#2F80EC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vert_80"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_vert_20"
        app:layout_constraintTop_toBottomOf="@+id/home_medication_btn"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vert_80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horiz_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horiz_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="673dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horiz_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <TextView
        android:id="@+id/home_greeting_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Greetings"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/home_interface_txt"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vert_80"
        app:layout_constraintStart_toStartOf="@+id/guideline_vert_20"
        app:layout_constraintTop_toTopOf="@+id/guideline_horiz_15" />

</androidx.constraintlayout.widget.ConstraintLayout>