<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="I am a..."
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_marginLeft="20sp"
        app:layout_constraintStart_toStartOf="@+id/registration_vertical_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/registration_senior_button"
        android:layout_width="268dp"
        android:layout_height="95dp"
        android:layout_marginTop="8dp"
        android:text="User"
        android:textSize="36sp"
        app:backgroundTint="#2F80EC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_horiz_42" />

    <Button
        android:id="@+id/registration_caregiver_button"
        android:layout_width="273dp"
        android:layout_height="96dp"
        android:layout_marginTop="32dp"
        android:text="Caregiver"
        android:textSize="36sp"
        app:backgroundTint="#2F80EC"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horiz_78"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_senior_button" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registration_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horiz_42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horiz_78"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

</androidx.constraintlayout.widget.ConstraintLayout>